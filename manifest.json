{
  "name": "JIRA Mail for BCGE",
  "description": "This extension adds an email button to the toolbar which allows you to email the BCGE.",
  "version": "0.0.2",
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "icons": { "128": "mail_128x128.png" },
  "options_page": "options.html",
  "permissions": [
    "tabs", "https://issue.swisscom.ch/*"
  ],
  "browser_action": {
    "default_title": "Jira Extension",
    "default_icon": "email_16x16.png"
  },

  "manifest_version": 2
}
